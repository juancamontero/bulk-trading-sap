---
const menuItems = [
  { name: 'Servicios', url: '#servicios' },
  { name: 'Acerca nuestro', url: '#sobre-nosotros' },
  { name: 'Contacto', url: '#contacto' },
]
---

<nav class='bg-bg-100 w-full'>
  <div class='flex flex-col items-center justify-between mx-auto'>
    <div class='w-full py-2 border-t border-b border-bg-300'>
      <a
        href='/'
        class='flex items-center space-x-3 rtl:space-x-reverse m-auto'
      >
        <img
          src='/logo-blanco.webp'
          alt='Logo bulk trading'
          class='h-20 w-auto m-auto bg-bg-300'
        />
      </a>
    </div>

    <ul class='flex flex-row p-4 w-full justify-center gap-8 text-sm lg:gap-36 border-b border-bg-300 bg-bg-100'>
      {
        menuItems.map((menuItem) => (
          <a
            href={menuItem.url}
            class='text-text-200 hover:text-accent-100'
            
          >
            {menuItem.name}
          </a>
        ))
      }
    </ul>
  </div>
</nav>
